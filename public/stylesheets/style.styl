/* GLOBAL STYLES */
body 
  font 14px "webfontregular", Helvetica, Arial, sans-serif;
  color black
  background-color black
  cursor url("/images/badge.png") 4 12, auto

.resize-page
  background-color white
  padding 50px 0 50px 0
  text-align center
  h1:first-child
    padding-top 100px

.page-shade
  box-shadow inset 0 0 100px 0 rgba(0,0,0,0.1)

a, a:hover, a:visited
  color #666
  cursor pointer

a:hover
  color black
  text-shadow 1px 1px 3px rgba(0,0,0,0.1)

/* PARALLAX */
ul.parallax-viewport

  -moz-background-size:cover;
  -o-background-size:cover;
  -webkit-background-size:cover;
  background:url(/images/background.jpg) no-repeat center center fixed;
  background-size:cover;
  list-style:none;
  margin:0;
  min-height:650px;
  overflow:hidden;
  padding:0;
  position:relative;
  width:100%;


ul.parallax-viewport li.parallax-layer
  bottom:0;
  top:0;
  position:absolute;
  width:100%;


ul.parallax-viewport li.parallax-layer.layer1

  background:url(/images/layer1.png) repeat-x 0 100%;
  width:2020px;


ul.parallax-viewport li.parallax-layer.layer2

  background:url(/images/layer2.png) repeat-x 0 100%;
  width:2120px;



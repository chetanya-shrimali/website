/* Carousel base class */
.carousel
  z-index 100
  position absolute
  top 0px
  margin-bottom: 60px;

  .container 
    position: relative;
    z-index: 9;
    text-align center
  
  .carousel-inner 
    position relative
  
  .carousel-control 

    height: 80px;
    margin-top: 0;
    font-size: 120px;
    text-shadow: 0 1px 1px rgba(0,0,0,.4);
    background-color: transparent;
    border: 0;
    color white

  .carousel-control:hover
    color white

  .item 
    height: 600px;
    .huge
      font-size 100px
      
  .carousel-col
    float left
    width 25%
    text-align center

  .carousel-caption
    background-color transparent
    position static
    padding 0 20px 0 20px
    top 0
    left 40px
    right 40px
    position absolute
    
    h1, h2, p
      a
        color white
        text-decoration underline
      padding-bottom 10px
      margin 0
      color white
      line-height 1.25
      text-shadow 0 4px 4px black
    h1, h2
      opacity 0.7
    h1
      padding 50px 0 0 0
    p
      font-size 16px
    
  .carousel-caption .btn
    margin-top: 10px
    
  .logo-massive
    opacity 0.6
  

/* Sticky footer styles
-------------------------------------------------- */

html, body 
  height: 100%;
  /* The html and body elements cannot have any padding or margin. */


/* Wrapper for page content to push down footer */
#wrap 
  min-height: 100%;
  height: auto !important;
  height: 100%;
  /* Negative indent footer by it's height */
  margin: 0 auto -60px;


/* Set the fixed height of the footer here */
#push, #footer 
  height 80px
  color white

#mission
  .container
    background-image url("/images/voyager-translucent.png")
    background-position 0 260px
    background-repeat no-repeat
    text-align left
    section
      padding-top 30px
      clear both

    section:before
        content: "{"
        float left
        font-size 120px
        line-height 110px
        color #ddd


/* Lastly, apply responsive CSS fixes as necessary */
@media (max-width: 767px) 
  #footer
    margin-left: -20px;
    margin-right: -20px;
    padding-left: 20px;
    padding-right: 20px;

a.brand
  background url("/images/logos/COUNTABLE-LOGO-5.png") 0 9px no-repeat
  width 300px
  height 50px

#navbar
  font-weight normal
  height 50px
  text-transform uppercase
  font-size 16px
  background-color white
  .navbar-inner
    background-color white
    height 50px
    box-shadow 0 5px 0 0 rgba(0,0,0,0.1)
  .nav
    li a
      font-size 12px
      letter-spacing 0.5em
      padding-top 15px
      padding-bottom 11px
      border-top 4px solid #ddd
      color #aaa
    li.active a
      box-shadow none
      border-top 4px solid black
      color black
    li:hover a
      color black

h1
  font-size 130px
  line-height 110px

h2
  font-size 100px
  line-height 90px

h3
  font-size 50px
  line-height 40px

h4
  font-size 30px
  line-height 25px

.client
  min-height 240px
  .repr
    height 110px
    padding 10px

#contact
  letter-spacing 0.5em
  z-index 500
  position fixed
  
  left 0
  right 0
  bottom 0
  
  height 20px
  background-color white
  box-shadow 0 -5px 0 0 rgba(0,0,0,0.1)

  padding 17px
  .contact-form, .close-contact
    display none
  .contact-form
    textarea
      height 60px
    input
      height 25px
    input, textarea
      border 2px solid black
    button
      background black
      color white
  p
    a
      font-size 12px
      text-transform uppercase
      font-weight normal
      color black

  .contact-details
    i
      font-size 16px
    a
      margin-right 50px


#contact.open
  height 210px
  .container
    background-image url("/images/shokunin_World_Map.png")
    background-position 620px 0
    background-repeat no-repeat
    position relative
    height 210px
  .contact-us1
    display none

  .contact-form
    z-index 550
    display block
    position absolute
    right 0
    top 0
    bottom 0
    width 260px
    font-family Arial
    label
      display none

    padding 5px
    border-radius 5px
    background-color white

  .close-contact
    display block
    top 0
    right 10px
    position absolute
    z-index 600
    font-size 30px
    cursor pointer


/* RESPONSIVE CSS */

@media (max-width: 979px)
  
  .nav-collapse
    top -14px // works because position is relative
    background-color white
    box-shadow 0 0 10px 0 rgba(0,0,0,0.2)
    .nav>li>a
      font-weight normal

  #navbar
    position fixed
    li a
      margin 0
    .navbar-inner
      padding-left 20px
      padding-right 20px
    .brand
      margin-left 5px

  #contact.open
    letter-spacing 0.25em
    .contact-form
      textarea
        height 35px
        margin-bottom 0
    .container
      background-position 0 20px

@media (max-width: 767px) 
  
  h1
    font-size 80px
    line-height 70px
  h2
    font-size 60px
    line-height 70px
  body
    padding 0

  .contact-details a
    display block 

  .carousel-replacement
    color white
    text-shadow 0 1px 3px black

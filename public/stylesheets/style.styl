/* GLOBAL STYLES */

fridge-white=#eff1e6
space-blue=#011d28
neon-blue=#0cbce3
highlight-yellow=#ede88c

@font-face{
  font-family:'novecento-book';
  src:url('/font/Novecentowide-Book.otf?v=1');
  font-weight:normal;
  font-style:normal;
}

// User agent overrides
body
  font 14px "novecento-book", Helvetica, Arial, sans-serif
  color white
  background-color black

h1, h2, h3
  color fridge-white

h1
  font-size 130px
  line-height 110px

h2
  font-size 100px
  line-height 90px

h3
  font-weight normal
  font-size 50px
  line-height 40px

h4
  font-size 30px
  line-height 25px

a, a:hover, a:visited
  color neon-blue
  cursor pointer

a:hover
  color space-blue
  text-decoration none

// Global styles
.resize-page
  position relative
  overflow hidden
  color fridge-white
  padding 50px 0 50px 0
  text-align center
  h1:first-child
    padding-top 100px
  
  .marker
    position absolute
    top 0

.page-shade
  box-shadow inset 0 0 100px 0 rgba(0,0,0,0.1)

// Bootstrap overrides.

.sil-widget
  font-family Arial
  a
    color black



.navbar
  height 50px
  z-index 500
  font-size 16px
  font-weight normal
  text-transform uppercase
  
  .navbar-inner
    background fridge-white
    height 50px
    box-shadow 0 5px 0 0 rgba(0,0,0,0.1)
  
  .nav
    li a
      letter-spacing 3px
      font-size 15px
      padding 17px 20px 0 20px
      margin 0 10px 0 0
      color neon-blue
    li.active a, li.active a:hover
      background-color fridge-white
      box-shadow none
      color space-blue !important
      border-bottom 2px solid neon-blue

  a.brand
    background space-blue url("/images/countable-title.png") 0 0 no-repeat
    width 253px
    height 36px
    padding 0
    margin 9px 0 0 40px

/* Sticky footer styles
-------------------------------------------------- */

html, body
  height: 100%;
  /* The html and body elements cannot have any padding or margin. */


/* Wrapper for page content to push down footer */
#wrap
  min-height: 100%;
  height: auto !important;
  height: 100%;
  /* Negative indent footer by it's height */
  margin: 0 auto -60px;

/* Set the fixed height of the footer here */
#push, #footer
  height 80px
  color fridge-white

#why

  .container
    text-align left
    .row
      min-height 500px
    .nasa
      background-image url("/images/voyager-translucent.png")
      background-position 0 0
      background-repeat no-repeat
      min-height 500px
      width 400px

    section
      padding 30px 0 0 0
      clear both

    section:before
        content: "{"
        float left
        padding 0 20px 0 0
        font-size 120px
        font-family serif
        line-height 110px
        color #ccb

#how
  .crazybig
    font-size 140px
    line-height 140px
    text-align center


#who
  .client
    min-height 240px
    .repr
      height 110px
      padding 10px


#credits
  color fridge-white
  h1
    color fridge-white
p.credit
  text-align center

#contact
  z-index 500
  position fixed
  left 0
  right 0
  bottom -180px
  height 230px
  box-shadow 0 -4px 0 rgba(0,0,0,0.3)
  .contact-bar
    position absolute
    top 0
    left 0
    right 0
    height 50px
    background url("/images/diag-bg.png") repeat
  
  .contact-toggle

    position absolute
    bottom 0
    right 0
    top 0
    padding 15px 80px 0 80px
    background-color fridge-white
    font-size 20px

  .contact-body
    position absolute  
    top 50px
    left 0
    right 0
    height 180px
    background-color neon-blue

  .contact-info
    font-size 40px
    position absolute
    top 40px
    left 80px
    a
      color white
      font-weight bold

  .contact-form
    position absolute
    top 0
    right 0
    bottom 0

    padding 20px 40px 0 0
    width 240px

    font-family Arial

    .sil-widget>div>div>a
      display none

    label
      display none
    textarea
      height 60px
    input, textarea

      padding 5px
      display block
      width 100%
      margin 0 0 5px 0

      background-color fridge-white
    button, input, textarea
      border-width 0px
      border-radius 0px
    button
      position absolute
      right 250px
      bottom 10px
      padding 25px 15px
      
      background space-blue

      color fridge-white
      font-size 20px
      text-shadow none
      text-transform uppercase

  .close-contact
    position absolute
    top 11px
    right 30px
    display none
    font-size 24px
    font-weight bold
    color space-blue
    cursor pointer

#contact.open
  bottom 0
  .close-contact
    display block

#contact.opening
  -webkit-animation-name opener
  -webkit-animation-duration 1s

#contact.closing
  -webkit-animation-name opener
  -webkit-animation-duration 1s
  -webkit-animation-direction reverse

.overlay
  position absolute
  z-index 300
  margin-top -50px
  top 50%
  width 100%
  .logo
    width 1px
      
  .sloganimate
    -webkit-animation up 1s
    -webkit-animation-fill-mode forwards

  .slogan
    display none
    position absolute
    top -200px
    left 0
    right 0
    padding 0 0 0 10px
    text-align center
    font-weight bold
    text-shadow 0 10px 15px rgba(0,0,0,0.5)
    p.we
      margin-left 40px
      font-size 70px
      letter-spacing 60px
      line-height 100px
      color neon-blue
    p.tomorrows
      font-size 95px
      line-height 130px
      letter-spacing 12px
      color fridge-white
      text-shadow 1px 0 0 highlight-yellow, 0 1px 0 highlight-yellow, 0 -1px 0 highlight-yellow, 
      1px 1px 0 highlight-yellow, -1px 1px 0 highlight-yellow, -1px 0 0 highlight-yellow, 
      -1px -1px 0 highlight-yellow, 1px -1px 0 highlight-yellow, 0 10px 15px rgba(0,0,0,0.5)
    p.web-apps
      margin-left 10px
      font-size 140px
      line-height 140px
      letter-spacing 17px
      color fridge-white
      text-shadow 1px 0 0 highlight-yellow, 0 1px 0 highlight-yellow, 0 -1px 0 highlight-yellow, 
      1px 1px 0 highlight-yellow, -1px 1px 0 highlight-yellow, -1px 0 0 highlight-yellow, 
      -1px -1px 0 highlight-yellow, 1px -1px 0 highlight-yellow, 0 10px 15px rgba(0,0,0,0.5)


/* Carousel base class */
.carousel

  .container
    position: relative
    z-index: 9
    text-align center
  
  .carousel-inner 
    position relative
  
  .carousel-control
    height 80px
    margin-top 0
    font-size 120px
    background-color transparent
    border 0
    opacity 1
    color white

  .carousel-control:hover

  .item 
    height: 600px
  
  .howto
    height 100px
    border 2px dashed white
    border-radius 75px
    padding 25px
    float left
    width 100px
    margin 10px 0 0 50px

    i
      font-size 80px
    i.smaller
      font-size 40px


  .carousel-caption
    
    padding 0 20px 0 20px
    top 0
    left 40px
    right 40px

    background-color transparent

    h3
      margin-bottom 0.5em
    a
      text-decoration underline
    p
      font-size 16px
      color white
    
/* RESPONSIVE CSS */

@media (max-width: 979px)
  
  .nav-collapse
    top -14px // works because position is relative
    background-color fridge-white
    box-shadow 0 0 10px 0 rgba(0,0,0,0.2)
    .nav>li>a
      font-weight normal

  #navbar
    position fixed
    li a
      margin 0
    .navbar-inner
      padding-left 20px
      padding-right 20px
    .brand
      margin-left 5px

  #contact.open
    letter-spacing 0.25em
    .contact-form
      textarea
        height 35px
        margin-bottom 0
    .container
      background-position 0 20px


@media (max-width: 767px) 
  
  h1
    font-size 80px
    line-height 70px
  h2
    font-size 60px
    line-height 70px
  body
    padding 0

  .contact-details a
    display block 
